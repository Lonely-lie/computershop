<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.computershop.mapper.ProductMapper">

    <resultMap type="product" id="ProductResult">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="pro_img" column="pro_img"/>
        <result property="pro_desc" column="pro_desc"/>
        <result property="pro_price" column="pro_price"/>
        <result property="rest_stock" column="rest_stock"/>
        <result property="shop_id" column="shop_id"/>
        <result property="pro_type_id" column="pro_type_id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="isDelete" column="is_delete"/>
    </resultMap>

    <select id="list" resultMap="ProductResult">
    SELECT * FROM product_info  WHERE pro_type_id=#{id} and is_delete=0 LIMIT #{offset},#{size}
  </select>

    <select id="listCount" resultType="int">
    SELECT COUNT(*)   FROM product_info WHERE is_delete=0 and pro_type_id=#{id}
  </select>

    <update id="update" parameterType="product">
        update product_info
        set
        name=#{name},pro_desc=#{pro_desc},pro_price=#{pro_price},rest_stock=#{rest_stock},shop_id=#{shop_id},update_time=#{updateTime}
        where id=#{id}
    </update>

    <insert id="insert" parameterType="product" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO product_info(name,pro_desc,pro_price,rest_stock,shop_id,pro_type_id,is_delete,create_time,update_time)
        VALUES(#{name},#{pro_desc},#{pro_price},#{rest_stock},#{shop_id},#{pro_type_id},#{isDelete},#{createTime},#{updateTime})
    </insert>

    <update id="deleteUpdate" parameterType="product">
        update product_info
        set
        is_delete=true
        where id=#{id}
    </update>

</mapper>

