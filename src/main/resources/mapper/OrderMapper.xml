<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.computershop.mapper.OrderMapper">

    <resultMap type="order" id="OrderResult">
        <id property="id" column="id"/>
        <result property="orderCode" column="orderCode"/>
        <result property="userMessage" column="userMessage"/>
        <result property="user_id" column="user_id"/>
        <result property="user_address_id" column="user_address_id"/>
        <result property="payDate" column="payDate"/>
        <result property="deliveryDate" column="deliveryDate"/>
        <result property="confirmDate" column="confirmDate"/>
        <result property="status" column="status"/>
        <result property="updateTime" column="updateTime"/>
        <result property="createTime" column="createTime"/>
        <result property="isDelete" column="isDelete"/>
    </resultMap>


    <select id="list" resultMap="OrderResult">
    SELECT * FROM order_info  WHERE is_delete=0 LIMIT #{offset},#{size}
    </select>

    <select id="listCount" resultType="int">
    SELECT COUNT(*)   FROM order_info WHERE is_delete=0
    </select>


    <update id="update" parameterType="order">
        update order_info
        set
        status=#{status},deliveryDate=#{deliveryDate},update_time=#{updateTime}
        where id=#{id}
    </update>

    <select id="findByOrderId" parameterType="int" resultMap="OrderResult">
        SELECT * FROM order_info  WHERE id=#{oid}
    </select>

    <insert id="add" parameterType="order" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO order_info(orderCode,userMessage,user_address_id,user_id,payDate,deliveryDate,confirmDate,status,create_time,is_delete,update_time)
        VALUES(#{orderCode},#{userMessage},#{user_address_id},#{user_id},#{payDate},#{deliveryDate},#{confirmDate},#{status},#{createTime},#{isDelete},#{updateTime})
    </insert>

</mapper>

